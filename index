<script>
        function searchTable() {
            var input, filter, table, tr, td, i;
            input = document.getElementById("locationInput");
            filter = input.value.toUpperCase();
            table = document.getElementById("promoTable");
            tr = table.getElementsByTagName("tr");

            for (i = 1; i < tr.length; i++) { td = tr[i].getElementsByTagName("td")[2]; if (td) { if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }       
            }
        }
    </script>
